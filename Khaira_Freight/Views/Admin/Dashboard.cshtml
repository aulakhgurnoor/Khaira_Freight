
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    body {
        line-height: 1.3;
            font-family: Arial, Helvetica, sans-serif;
    }

    .cards {
        display: grid;
    }

    .cards {
        grid-gap: 2rem;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        margin: 10px;
        width: fit-content;
        /* background: whitesmoke; */
        grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
    }

    .card-front {
        backface-visibility: hidden;
        display: flex;
        align-items: center;
        background-color: white;
        box-sizing: border-box;
        padding: 1.5rem;
        border-radius: 0.25rem;
    }

    .flip-card {
        background-color: transparent;
        width: 300px;
        height: 100px;
        perspective: 40rem;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.6s;
        transform-style: preserve-3d;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
    }

    .flip-card-front {
        background-color: white;
        color: black;
    }

    .flip-card-back {
        background-color: #2980b9;
        color: white;
        transform: rotateY(180deg);
    }

    body {
        /*background-image: url('../../Content/images/blur-bg-blurred.jpg');*/
        font-family: Arial, Helvetica, sans-serif;
    }
</style>
<body>
    <div class="cards">
        <div class="flip-card">
            <div class="flip-card-inner">
                <div class="flip-card-front">
                    <h2 class="card-front">Total Drivers</h2>
                </div>
                <div class="flip-card-back">
                    <h1>
                        @ViewBag.driver
                    </h1>
                </div>
            </div>
        </div>
        <div class="flip-card">
            <div class="flip-card-inner">
                <div class="flip-card-front">
                    <h2 class="card-front">Total Dispatchers</h2>
                </div>
                <div class="flip-card-back">
                    <h1>
                        @ViewBag.dispatcher
                    </h1>
                </div>
            </div>
        </div>
    </div>
</body>

