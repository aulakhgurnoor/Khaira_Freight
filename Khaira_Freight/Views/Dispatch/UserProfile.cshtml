        </h4>


        <h4>
            @Html.DisplayNameFor(model => model.gender):
            @foreach (var item in Model)
            {

                @Html.DisplayFor(modelItem => item.gender)
            }
        </h4>


        @foreach (var item in Model)
        {



            @*<h4 id="btn_style">@Html.ActionLink("Login Info", "LoginInfo")</h4>*@

            <h4 id="btn_style"><i class="fa fa-fw fa-pencil"></i> @Html.ActionLink("Edit Profile", "EditProfile", new { id = item.dispatch_id }) </h4>
        }




    </div>


</div>

