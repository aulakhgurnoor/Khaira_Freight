@model IEnumerable<Khaira_Freight.Models.UserTable>

@{
    ViewBag.Title = "Login Info";
    Layout = "~/Views/Shared/DispatchLayout.cshtml";
}


<style>
    #main {
        //background-image: url('/Content/images/profile.jpg.jpg');
        background-attachment: fixed;
        background-size: 50% 150%;
    }

    /*#container {
        align-content: center;
