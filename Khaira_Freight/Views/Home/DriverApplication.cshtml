@model  IEnumerable<Khaira_Freight.Models.driver_application>

@{
    ViewBag.Title = "DriverApplication";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
      
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <br /><br />
            Please download the form and fill out all the fields, then save file with your name as the file name.<br />
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
                <path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z" />
            </svg>
            <a href="../content/pdf/DriverApplicationForm.pdf" target="_blank">Download Driving Application From</a><br />

        </div>
        <div class="row">
            <br /><br />
            Before uploading please make sure the file name is saved by your name.
            @using (Html.BeginForm("DriverApplication", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="file" name="postedFile" /><br />
                <input type="submit" id="btnUpload" value="Upload" />
            }
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        function DownloadFile(fileId) {
            $("#hfFileId").val(fileId);
            $("#btnDownload")[0].click();
        };
    </script>
</body>
</html>
