                <a id="btn_style" href="../content/pdf/DriverApplicationForm.pdf" target="_blank">Download Driving Application From</a><br />

                <br />
                Before uploading please make sure the file name is saved by your name.
                @using (Html.BeginForm("DriverApplication", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <input type="file" name="postedFile" class="btn btn-primary" /><br />
                    <input type="submit" id="btnUpload" value="Upload" class="btn btn-primary" />
                }
            <div class="alert">
                <h4 class="success">@ViewBag.Success</h4>
                <h4 class="alert-danger">@ViewBag.ErrorMessage</h4>

            </div>

