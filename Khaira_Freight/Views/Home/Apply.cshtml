            </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
                function DownloadFile(fileId) {
                    $("#hfFileId").val(fileId);
                    $("#btnDownload")[0].click();
                };
    </script>
